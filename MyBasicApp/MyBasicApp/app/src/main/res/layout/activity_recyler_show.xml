<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activity.RecylerShowActivity">



    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/showImg"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/person_pic"
        android:padding="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Details"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="30sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Full Name"
            android:textColor="#636060"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/showName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_name"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textColor="#636060"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/showAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_name"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="115dp"
            android:textColor="#000"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batting"
            android:textColor="#636060"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/showBat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_name"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="85dp"
            android:textColor="#000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bowling"
            android:textColor="#636060"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/showBoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_name"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="80dp"
            android:textColor="#000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nick Name"
            android:textColor="#636060"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/showNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_name"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:textColor="#000"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teams"
            android:textColor="#636060"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/teams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_name"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="90dp"
            android:textColor="#000"
            />

    </LinearLayout>




</LinearLayout>